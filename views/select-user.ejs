<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%- include('includes/bootstrapcss.ejs') %>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <%- include('includes/navbar.ejs') %>          
      </div>

      <div class="row">
        <div class="col">
          <!-- Page header-->
          <h4>Pick a user</h4>
        </div>
      </div>
      <div class="row">
          <!-- Page Main Content-->
          <table class="table">
            <thead>
              <tr>
                <th>ID:</th>
                <th>Name:</th>
                <th>Delete?</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach( user =>{ %>
                
                <tr>
                  <td><%= user.id %></td>
                  <td><%= user.name %></td>
                  <td>Delete</td>
                </tr>
                
              <% }); %>
              
              <tr>
                <form action="/users" method="POST" class="form-group">
                  <td>Name:</td>
                  <td><input type="text" name="name" id="" /></td>
                  <td><button type="submit">Create</button></td>
                </form>
              </tr>
              
            </tbody>
          </table>

      </div>

    </div>
    <%- include('includes/bootstrapjs.ejs') %>
  </body>
</html>
